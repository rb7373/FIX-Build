[md-header-picture]
  position relative
  width 100%
  height 0
  /* Simple trick to keep a 16:9 ratio on your background image (height=0;padding-bottom=56.25%) */
  padding-bottom 56.25%
  overflow hidden
  background-size 100% // 160%
  /* You can override this value if your picture has a weird ratio */
  background-position 50% 50%